
<!-- <h1>Profile</h1> -->
<div class="row">
  <div class="col-md-12">
<h2><%= @user.name %></h2>
</div>
</div>

<div class="row">
  <div class="col-md-4">

<% if @user.image %>
<%= image_tag @user.image, :class => 'profile' %>
<% end %>
</div>

<div class="col-md-4  form" >

<div class="user">
<%= form_for @user do |f| %>
  <p>
    <% f.label :name %>
    <%= f.text_field :name, class: "color", :required => true %>
  </p>

  <p>
    <% f.label :email %>
    <%= f.email_field :email, class: "color", :required => true %>
  </p></div>
<%= f.submit "Update", :class => "updateButton" %>
<% end %>
<%#= link_to( "Edit user", edit_user_path(@user) ) %>
<%= link_to "Delete", user_path(@user), :class => "deleteButton", :method => :delete %></div>

</div>
</div>
